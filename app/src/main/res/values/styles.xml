<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">#fbc02d</item>

    </style>

    <style name="teamTextViews" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>

    </style>

    <style name="statsTextViews" parent="teamTextViews">
        <item name="android:layout_marginTop">@dimen/margin_16</item>


    </style>


    <style name="scoreValueTextViews" parent="android:TextAppearance.Medium">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
    </style>

    <style name="scoreButtons">

        <item name="android:theme">@style/scoreButtons</item>
        <item name="colorButtonNormal">#fbc02d</item>


    </style>

    <style name="resetButtons">

        <item name="android:theme">@style/resetButtons</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="VolleyballTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_light_1</item>
        <item name="android:colorForeground">@color/primary_dark_material_blue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/accent_material_yellow</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_blue</item>
    </style>

</resources>